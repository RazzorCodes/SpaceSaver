# syntax=docker/dockerfile:1
FROM python:3.12-slim AS base

# Install ffmpeg (includes ffprobe) from Debian repos — cached layer
RUN apt-get update && \
    apt-get install -y --no-install-recommends ffmpeg && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

FROM base AS app

# Bust the app-stage cache on every build (value injected by build.sh)
ARG CACHE_BUST

WORKDIR /app

# Install Python dependencies (re-runs every build so new packages are picked up)
COPY requirements.txt .
RUN pip install --upgrade pip && \
    pip install -r requirements.txt

# Copy application source
COPY *.py .
COPY version.txt .

# Expose the HTTP API port
EXPOSE 8000

# Run the Flask application (threaded mode — Flask handles the two background
# threads and API requests concurrently within the same process)
CMD ["python", "app.py"]
